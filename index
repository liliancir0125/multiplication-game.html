    <script>
        // é€™è£¡æ”¾å…¥ä½ åŸæœ¬çš„ JS é‚è¼¯ (ç°¡åŒ–ç‰ˆ)
        let currentMode = 'recite';
        let a = 2, b = 1, userInput = "";

        function switchMode(m) {
            currentMode = m;
            document.getElementById('tab-recite').classList.toggle('active', m==='recite');
            document.getElementById('tab-quiz').classList.toggle('active', m==='quiz');
            document.getElementById('nav-btns').style.display = m==='recite' ? 'block' : 'none';
            document.getElementById('keypad').style.display = m==='quiz' ? 'grid' : 'none';
            initGame();
        }

        function initGame() {
            let r = document.getElementById('rangeSelect').value;
            a = r === 'random' ? Math.floor(Math.random()*8)+2 : parseInt(r);
            b = 1; userInput = ""; render();
        }

        function render() {
            let area = document.getElementById('displayArea');
            if(currentMode === 'recite') {
                area.innerHTML = `${a} <span>Ã—</span> ${b} = ${a*b}`;
            } else {
                area.innerHTML = `${a} <span>Ã—</span> ${b} = <span class="answer-box">${userInput||'?'}</span>`;
            }
        }

        function nextStep() { if(b<9) b++; render(); }
        function prevStep() { if(b>1) b--; render(); }
        function pressNum(n) { userInput += n; render(); }
        function checkAnswer() {
            if(parseInt(userInput) === a*b) { alert("ç­”å°äº†ï¼"); initGame(); }
            else { alert("å†è©¦ä¸€æ¬¡"); userInput = ""; render(); }
        }
        window.onload = initGame;
    </script>
